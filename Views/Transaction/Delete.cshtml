@model FinanceTracker.Models.Transaction
@{
    ViewBag.Title = "Delete Transaction";
    Layout = "_Layout";
}

<h2>Delete Transaction</h2>

<div>
    <h4>Are you sure you want to delete this transaction?</h4>
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount.ToString("C")</dd>
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a href="/Transaction" class="btn btn-secondary">Cancel</a>
    </form>
</div>
